{
  "name": "xtoolkits",
  "version": "0.0.1",
  "description": "This is a collection of commonly used tools",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run lint && rollup -c -w rollup.config.js",
    "lint": "tslint --project tsconfig.json --fix",
    "commit": "git-cz",
    "version": "conventional-changelog -i CHANGELOG.md -s && git add CHANGELOG.md"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hefeng1208/xtoolkits.git"
  },
  "keywords": [
    "uitl",
    "tool",
    "timestamp",
    "unit",
    "convert unit",
    "log",
    "console"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.1.0",
    "@types/jest": "^26.0.20",
    "@types/luxon": "^1.25.1",
    "conventional-changelog-cli": "^2.1.1",
    "cz-emoji": "^1.3.1",
    "git-cz": "^4.7.6",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "prettier-tslint": "^0.4.2",
    "rollup": "^2.38.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-typescript2": "^0.29.0",
    "ts-jest": "^26.4.4",
    "tslint": "^6.1.3",
    "tslint-plugin-prettier": "^2.3.0",
    "typescript": "^4.1.3"
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-emoji"
    },
    "cz-emoji": {
      "types": [
        {
          "emoji": "\tüåü",
          "code": ":star2:",
          "description": "\tA new feature",
          "name": "feat"
        },
        {
          "emoji": "\tüêû",
          "code": ":beetle:",
          "description": "\tA bug fix",
          "name": "fix"
        },
        {
          "emoji": "\tüé®",
          "code": ":art:",
          "description": "\tNeither fixes a bug nor adds a feature",
          "name": "refactor"
        },
        {
          "emoji": "\tüöì",
          "code": ":police_car:",
          "description": "\t Testing improved with new or fixed tests",
          "name": "test"
        },
        {
          "emoji": "\tüî©",
          "code": ":nut_and_bolt:",
          "description": "\tDoesn't modify src or test files",
          "name": "chore"
        },
        {
          "emoji": "\tüí∞",
          "code": ":moneybag:",
          "description": "\tImproves performance with this change",
          "name": "perf"
        },
        {
          "emoji": "\tüö•",
          "code": ":traffic_light:",
          "description": "\tCI config files and scripts",
          "name": "ci"
        },
        {
          "emoji": "\t‚ôªÔ∏è",
          "code": ":recycle:",
          "description": "\tOptimize workflow",
          "name": "workflow"
        },
        {
